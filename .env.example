# Application
SERVER_URL=http://localhost:8080
NODE_ENV=development
PORT=8080

# === Unified local DB (pgAdmin / PostgreSQL on your PC) ===
# Create a database named "broadway" in pgAdmin. For Docker, use host.docker.internal:
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@host.docker.internal:5432/broadway?schema=public
# If Postgres is on another port:
# DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@host.docker.internal:5433/broadway?schema=public
# Required: in pgAdmin Query Tool on database "broadway", run once: CREATE EXTENSION IF NOT EXISTS vector;

REDIS_URL=redis://redis:6379

