{
  "name": "broadway-copilot",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --poll --transpile-only --ignore-watch node_modules --ignore-watch dist --ignore-watch .git src/index.ts",
    "dev:nodemon": "nodemon --watch src --watch prompts --ext ts,txt --exec \"ts-node --transpile-only src/index.ts\"",
    "build": "tsc -p tsconfig.json && npm run build:scripts",
    "build:scripts": "tsc -p tsconfig.scripts.json",
    "start": "node dist/index.js",
    "graph": "ts-node-dev --transpile-only scripts/visualizeGraph.ts",
    "prune": "ts-prune",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "prisma:generate": "./node_modules/.bin/prisma generate",
    "prisma:migrate": "./node_modules/.bin/prisma migrate",
    "prisma:studio": "./node_modules/.bin/prisma studio"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@google-cloud/tasks": "^6.2.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "^6.15.0",
    "canvas": "^3.2.0",
    "colornames": "^1.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "groq-sdk": "^0.32.0",
    "openai": "^5.20.1",
    "pino": "^9.9.4",
    "redis": "^5.8.2",
    "zod": "^4.1.5",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prisma": "^6.15.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "ts-prune": "^0.10.3",
    "typescript": "^5.9.2"
  }
}
